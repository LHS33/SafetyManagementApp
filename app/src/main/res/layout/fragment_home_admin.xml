<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeAdminFragment"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">


                <Button
                    android:id="@+id/btnSensor"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:backgroundTint="#F9F9F9"
                    android:drawableTop="@drawable/ic_baseline_settings_input_antenna_24"
                    android:layout_margin="10dp"
                    android:padding="20dp"
                    android:text="센서"
                    android:textColor="#323232" />



                <Button
                    android:id="@+id/btnAdminNotice"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="#F9F9F9"
                    android:drawableTop="@drawable/ic_baseline_content_paste_24"
                    android:padding="20dp"
                    android:text="공지사항"
                    android:textColor="#323232" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">


                <Button
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:backgroundTint="#F9F9F9"
                    android:drawableTop="@drawable/ic_baseline_campaign_24"
                    android:layout_marginRight="10dp"
                    android:padding="20dp"
                    android:text="알림"
                    android:textColor="#323232" />



                <Button
                    android:id="@+id/btnHardHat"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:backgroundTint="#F9F9F9"
                    android:drawableTop="@drawable/ic_baseline_face_24"
                    android:layout_marginLeft="10dp"
                    android:padding="20dp"
                    android:text="안전모 착용"
                    android:textColor="#323232" />



        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_layout"/>

    </LinearLayout>

    <!--
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigationView"
        android:fitsSystemWindows="true"
        android:layout_gravity="left"
        app:menu="@menu/main"
        />
-->

</LinearLayout>